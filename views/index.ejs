<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="container w-screen flex flex-col items-center w-1/4 gap-5 p-8">
      <div class="bg-white shadow-md rounded-lg w-[400px] p-6">
        <div class="form">
          <form action="/create" method="post">
            <div class="mb-4">
              <label for="taskName" class="block text-gray-700 font-bold mb-2"
                >Task Name</label
              >
              <input
                type="text"
                id="taskName"
                placeholder="Task Name"
                name="task"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              />
            </div>
            <div class="mb-4">
              <label
                for="taskDescription"
                class="block text-gray-700 font-bold mb-2"
                >Task Description</label
              >
              <textarea
                id="taskDescription"
                placeholder="Task Description"
                name="desc"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              ></textarea>
            </div>
            <div class="flex items-center justify-between">
              <button
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit"
              >
                Add Task
              </button>
            </div>
          </form>
        </div>
      </div>
      <div class="tasks mt-8 flex gap-4 flex-wrap">
        <% if(file.length > 0){ %>
          <%  file.forEach((file) => { %>
        <div
          class="card flex flex-col gap-4 border min-w-[200px] bg-zinc-800 rounded-2xl p-5"
        >
          <h1 class="text-zinc-300"> <%= file %></h1>
          <div class="flex w-full justify-between items-center">
            <a href="/files/<%= file %>" class="text-blue-700">Read More</a>
            <a href="/edit/<%=  file %>" class="text-yellow-600">Edit</a>
          </div>
          
        </div>

        <% }) %>
    <% } else{ %> 
            <h1>No Tasks available.</h1>
       <% } %>

        
      </div>
    </div>
  </body>
</html>
